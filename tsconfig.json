{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext", "ESNext.Array"],
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "dict/*": ["./src/dictionary/*"],
      "components/*": ["./src/components/*"],
      "@app/*": ["./src/*"],
      "resources/*": ["../resources/*"],
      "util/*": ["./src/util/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "webpack-env"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
