.selector
    --highlight-x-pos: 12px
    --highlight-width: 0px
    display: flex
    justify-content: center
    background: white
    width: 100%
    height: 40px
    position: relative
    border-bottom: 1px solid black

    button
        font-size: 15px
        font-weight: bold
        background: transparent
        color: rgb(200,200,200)
        padding: 0 16px 

    .selected
        font-weight: bold
        color: black

.selector:after
    content: ""
    display: block
    width: var(--highlight-width)
    height: 2px
    background: var(--c4)
    position: absolute
    bottom: 0
    left: var(--highlight-x-pos)
    transition: left 0.25s ease, width 0.25s ease