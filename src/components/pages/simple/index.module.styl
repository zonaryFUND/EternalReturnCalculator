.simple
    padding: 16px

.parent
    margin: auto
    font-size:  12px
    max-width: 1240px

.header
    display: flex
    justify-content: space-between
    align-items: end
    gap: 24px

    .storage
        display: flex
        justify-content: space-between
        flex: 1
        gap: 8px
        background: var(--bg)

    .formula
        display: flex
        padding: 4px 8px
        gap: 12px
        border-radius: 4px
        align-items: center
        background: var(--bg)
        font-size: 14px
        font-weight: bold
        color: var(--lmg)
        transition: color 0.25s ease

    .on
        color: var(--main)
.base
    display: flex
    justify-content: center
    max-width: 100%
    margin-top: 16px
    border-radius: 8px

.row
    flex-grow: 1
    min-width: 300px
    max-width: 400px
    min-height: 85vh
    background: white

    >header
        background: var(--c4)
        color: white
        padding: 8px
        font-size: 10px
    
    h2
        font-size: 1.5rem   

    h3
        font-size: 1.2rem
        margin-bottom: 2px

.simple
    .tooltip
        padding: 0
        z-index: 1