.load
    display: flex
    flex-direction: column
    align-items: stretch
    position: absolute
    background: var(--base)
    width: 600px
    height: 600px
    margin: auto
    inset: 0
    border-radius: 16px
    overflow: hidden
    box-shadow: 0 0 25px rgba(0,0,0,0.5)
    padding: 24px

    header
        display: flex
        justify-content: space-between
        align-items: center
        margin-bottom: 12px

        h1
            font-size: 20px

        p
            font-size: 12px

    ul
        display: block
        width: 100%
        height: 500px
        background: white
        border: 1px solid black

    li
        display: flex
        justify-content: space-between
        align-items: center
        padding: 4px
        transition: background 0.25s ease

        p
            font-size: 16px
            
    li:not(.selected):hover
        background: rgba(black, 0.2)

    .selected
        color: white
        font-weight: bold
        cursor: pointer
        background: var(--c1)

    button
        background: transparent
        transition: background 0.25s ease
    
    button:hover
        background: white