.status
    padding: 8px

.parent
    font-size: 14px
    font-weight: bold
    border: 1px solid var(--c4)
    border-radius: 4px
    
    table
        width: 100%
        border-spacing: 0
        border-collapse: separate

    td
        border-bottom: 1px solid rgba(0,0,0,0.1)

    .label
        height: 28px

        >*
            vertical-align: middle

        svg:first-child
            margin-top: -2px

    .value
        font-size: 16px

    thead
        font-size: 12px
        height: 30px
        
        th:first-child
            text-align: left

    tbody
        td:not(:first-child)
            text-align: right

        tr
            height: 28px

    .separator
        background: var(--base)
        font-size: 13px
        div
            display: flex
            justify-content: space-between
            width: 100%
        

    td
        padding: 2px 4px

    .expand
        text-align: right
        >td
            padding: 0

    .inner
        td
            border: none
        span
            font-size: 10px

.basic-attack-reduction
    position: relative
    >:last-child
        display: block
        position: absolute
        top: -3px
        left: 0
        transform: scale(0.6)

.basic-attack-amp
    position: relative
    >:last-child
        display: block
        position: absolute
        top: 0
        left: 0
        transform: scale(0.6)

.attack-speed
    position: relative
    >:last-child
        display: block
        position: absolute
        top: 0
        left: 0
        font-size: 0.5em
        transform: scale(-1, 1)

.critical-damage
    position: relative
    >:last-child
        display: block
        position: absolute
        top: -0.2em
        left: -0.2em
        font-size: 0.5em